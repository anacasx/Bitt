<?xml version="1.0" encoding="utf-8"?>
<!-- Layout principal de la actividad utilizando RelativeLayout -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Vista previa de la cámara que ocupa todo el espacio disponible -->
    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Texto que muestra el resultado de la clasificación -->
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:text="Result"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <!-- Texto que muestra la confianza de la clasificación -->
    <TextView
        android:id="@+id/confidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:text="Confidence"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <!-- Botón de configuración en la esquina inferior izquierda -->
    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:padding="16dp"
        android:src="@android:drawable/ic_menu_preferences" />
</RelativeLayout>
